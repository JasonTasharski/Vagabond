
<div class="col-md-12 map-container">
	<div id="city-img">
		<img src="<%= @city.city_photo %>"></img>
	</div>
</div>
<div class="col-md-12 text-center">
	<h1><%= @city.city_name %></h1>
	<%= paginate @posts %>
	<% if current_user %>
	<a href="/profile/<%= current_user.username %>/posts/new">Write a post</a>
	<% else %>
	<a href="/login">Log in to write a post</a>
	<% end %>
	<% @posts.each do |p| %>
	<p>	
		<% if current_user.id == p.user_id %>
		<%= link_to "", user_post_path(p.user, p), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove delete-post" %>	
		<% end %>
		<%= link_to p.title, user_post_path(p.user, p) %>
	</p>
	<% end %>
</div>


