<div class="col-md-6 offset-3">
	<div class="form-group">
		<%= form_for edit_user_post_path(@user) do |f| %>
		  <%= f.text_field :title, placeholder: @post.title, class: "form-control" %><br>
		  <%= f.text_area_tag(:body, size: "24x6") %><br>
		  <%= f.submit "Edit Post" %>
		<% end %>
	</div>
</div>