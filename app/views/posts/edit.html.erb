<div class="col-md-6 offset-3">
	<div class="form-group">
		<%= form_for :post, url: user_post_path, method: :put do |f| %>
		  <%= f.text_field :title, placeholder: @post.title, class: "form-control" %><br>
		  <%= f.text_field :body, placeholder: @post.body, class: "form-control" %><br>
		  <%= f.submit "Edit Post" %>
		<% end %>
	</div>
</div>