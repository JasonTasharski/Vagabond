<div class="row">
  <div class="col-md-6 col-md-offset-3 post animated slideInUp">
    <h1>Sign Up</h1>
    <hr>
    
    <%= flash_messages %>

    <%= form_for @user, :validate => true, :url => users_path, :html => { :multipart => true } do |f| %>
      

      <div class="form-group">
        <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field  :current_city, placeholder: "Current City", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>
      <%= f.submit "Sign Up", class: "btn btn-default" %>
    <% end %>
  </div>
</div>



